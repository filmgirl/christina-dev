---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout title={`${post.data.title} | Christina Warren`} description={post.data.description}>
  <article class="max-w-3xl mx-auto px-6 py-16">
    <header class="mb-12">
      <a href="/blog" class="text-vapor-muted hover:text-vapor-pink transition-colors text-sm mb-4 inline-block">
        ‚Üê Back to blog
      </a>
      <time class="block text-sm text-vapor-muted mb-2">{formatDate(post.data.pubDate)}</time>
      <h1 class="font-display text-3xl md:text-4xl font-bold text-vapor-text mb-4">
        {post.data.title}
      </h1>
      {post.data.tags && (
        <div class="flex flex-wrap gap-2">
          {post.data.tags.map((tag: string) => (
            <span class="px-2 py-1 rounded-full text-xs border border-vapor-purple/30 text-vapor-purple bg-vapor-purple/10">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <div class="prose-blog">
      <Content />
    </div>
  </article>
</BaseLayout>
