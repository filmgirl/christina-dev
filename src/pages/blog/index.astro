---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout title="Blog | Christina Warren">
  <section class="max-w-3xl mx-auto px-6 py-16">
    <header class="mb-12">
      <h1 class="font-display text-4xl md:text-5xl font-bold gradient-text glow-text mb-4">
        Blog
      </h1>
      <p class="text-xl text-vapor-muted">
        Thoughts on tech, development, and whatever else is on my mind.
      </p>
    </header>

    {posts.length === 0 ? (
      <div class="text-center py-16">
        <p class="text-vapor-muted text-lg">No posts yet. Check back soon!</p>
      </div>
    ) : (
      <div class="space-y-8">
        {posts.map((post) => (
          <article class="group">
            <a href={`/blog/${post.id}`} class="block p-6 -mx-6 rounded-xl hover:bg-vapor-darker/50 transition-all">
              <time class="text-sm text-vapor-muted">{formatDate(post.data.pubDate)}</time>
              <h2 class="font-display text-2xl font-semibold text-vapor-text group-hover:text-vapor-pink transition-colors mt-2 mb-3">
                {post.data.title}
              </h2>
              <p class="text-vapor-muted leading-relaxed">
                {post.data.description}
              </p>
              {post.data.tags && (
                <div class="flex flex-wrap gap-2 mt-4">
                  {post.data.tags.map((tag: string) => (
                    <span class="px-2 py-1 rounded-full text-xs border border-vapor-purple/30 text-vapor-purple bg-vapor-purple/10">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </a>
          </article>
        ))}
      </div>
    )}
  </section>
</BaseLayout>
